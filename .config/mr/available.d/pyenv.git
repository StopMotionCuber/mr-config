[$HOME/.pyenv]
checkout = git clone 'https://github.com/pyenv/pyenv.git' '.pyenv'
order = 2
fixups = 
         cd "$HOME/.pyenv/bin" && ./pyenv install --skip-existing $(./pyenv install --list | sed 's/^  //' | grep '^\d' | grep --invert-match 'dev\|a\|b' | tail -1)
update = git pull
status = git status


[$HOME/.pyenv/plugins/pyenv-virtualenv]
order = 3
checkout = git clone https://github.com/pyenv/pyenv-virtualenv.git $MR_REPO
update = git pull
status = git status
