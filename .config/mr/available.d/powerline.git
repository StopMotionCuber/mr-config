[$HOME/.powerline]
checkout = git clone https://github.com/powerline/powerline $MR_REPO
fixups = 
    [ -d "$(pyenv root)/versions/powerline" ] || pyenv virtualenv "$(pyenv versions --bare | sed 's/^  //' | grep '^\d' | grep --invert-match 'dev\|a\|b' | tail -1)" powerline
    "$(pyenv root)/versions/powerline/bin/pip" install --editable "$MR_REPO"
    "$(pyenv root)/versions/powerline/bin/pip" install psutil
order = 3
update = git pull
status = git status
